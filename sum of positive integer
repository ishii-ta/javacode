class Main {
    public static void main(String[] args) {
       int[] arr={-3,2,6,-7,8,-1};
       int sum=0;
       int n=arr.length;
       for(int i=0;i<n;i++){
           if(arr[i]>0){
               sum=sum+arr[i];
           }else{
               sum=sum+0;
       }
    }
    System.out.println(sum);
}
}
